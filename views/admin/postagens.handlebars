<h2>Lista de Postagens: </h2>
<hr>
<a href="/admin/postagens/addpostagem">
    <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}">
                <button class="btn btn-success mt-4"> Editar Postagem</button>
            </a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-4"> Deletar Postagem</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma Postagem registrada</h4>
{{/each}}