<h2>{{categoria.nome}}</h2>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body mt-2">
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-secondary">Leia Mais...</button></a>
        <hr>
        <small>Data de publicação: {{data}}</small>
    </div>
</div>
{{else}}
    <h5>Nenhuma Postagem</h5>
{{/each}}